apiVersion: apps/v1
kind: Deployment
metadata:
  name: dispatch
  namespace: enclii
  labels:
    app: dispatch
    enclii.dev/managed-by: manual
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dispatch
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: dispatch
    spec:
      containers:
      - name: dispatch
        image: ghcr.io/madfam-org/dispatch:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 4203
          name: http
          protocol: TCP
        env:
        - name: PORT
          value: "4203"
        - name: NODE_ENV
          value: production
        - name: HOSTNAME
          value: "0.0.0.0"
        - name: NEXT_PUBLIC_APP_URL
          value: https://admin.enclii.dev
        - name: NEXT_PUBLIC_API_URL
          value: https://api.enclii.dev
        - name: NEXT_PUBLIC_JANUA_URL
          value: https://auth.madfam.io
        # Admin access control (domain + role-based authorization)
        - name: ALLOWED_ADMIN_DOMAINS
          value: "@madfam.io"
        - name: ALLOWED_ADMIN_ROLES
          value: "superadmin,admin,operator"
        - name: NEXT_PUBLIC_ALLOWED_ADMIN_DOMAINS
          value: "@madfam.io"
        - name: NEXT_PUBLIC_ALLOWED_ADMIN_ROLES
          value: "superadmin,admin,operator"
        - name: CLOUDFLARE_API_TOKEN
          valueFrom:
            secretKeyRef:
              name: dispatch-secrets
              key: cloudflare-api-token
              optional: true
        - name: CLOUDFLARE_ACCOUNT_ID
          valueFrom:
            secretKeyRef:
              name: dispatch-secrets
              key: cloudflare-account-id
              optional: true
        readinessProbe:
          httpGet:
            path: /api/health
            port: 4203
          initialDelaySeconds: 5
          periodSeconds: 5
          timeoutSeconds: 3
          failureThreshold: 2
        livenessProbe:
          httpGet:
            path: /api/health
            port: 4203
          initialDelaySeconds: 30
          periodSeconds: 10
          timeoutSeconds: 5
          failureThreshold: 3
        resources:
          requests:
            cpu: 100m
            memory: 256Mi
          limits:
            cpu: 500m
            memory: 512Mi
      imagePullSecrets:
      - name: ghcr-credentials
