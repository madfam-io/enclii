# E2E Test Environment Variables
# Copy this file to .env.test.local and fill in your credentials
# DO NOT COMMIT .env.test.local

# Base URL for E2E tests (default: http://localhost:3000)
BASE_URL=http://localhost:3000

# Standard test user credentials
# Create this user in Janua with 'developer' role
TEST_USER_EMAIL=test-dev@madfam.io
TEST_USER_PASSWORD=

# Admin test user credentials (optional)
# Create this user in Janua with 'admin' role
TEST_ADMIN_EMAIL=test-admin@madfam.io
TEST_ADMIN_PASSWORD=

# API URL for tests (default: http://localhost:4200)
NEXT_PUBLIC_API_URL=http://localhost:4200

# OIDC Issuer for auth tests
NEXT_PUBLIC_OIDC_ISSUER=https://auth.madfam.io
