# Enclii Switchyard UI Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL (required)
NEXT_PUBLIC_API_URL=http://localhost:4200

# Authentication mode: "local" or "oidc"
NEXT_PUBLIC_AUTH_MODE=oidc

# =============================================================================
# OIDC CONFIGURATION (when NEXT_PUBLIC_AUTH_MODE=oidc)
# =============================================================================

# OIDC Provider URL (Janua SSO)
# NEXT_PUBLIC_OIDC_ISSUER=https://auth.madfam.io

# =============================================================================
# BILLING INTEGRATION (Operation Golden Key)
# =============================================================================

# Dhanam checkout URL for tier upgrades
NEXT_PUBLIC_DHANAM_CHECKOUT_URL=https://dhanam.madfam.io/checkout

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable onboarding tour for new paid users
# NEXT_PUBLIC_ENABLE_TOUR=true
