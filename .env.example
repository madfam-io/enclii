# Enclii Development Environment Configuration

# Database
ENCLII_DB_URL=postgres://postgres:password@localhost:5432/enclii_dev?sslmode=disable

# Container Registry
ENCLII_REGISTRY=ghcr.io/madfam

# OIDC (using Dex for local development)
ENCLII_OIDC_ISSUER=http://localhost:5556
ENCLII_OIDC_CLIENT_ID=enclii
ENCLII_OIDC_CLIENT_SECRET=enclii-secret

# Default configuration
# See PORT_ALLOCATION.md in solarpunk-foundry for port assignments (Enclii block: 4200-4299)
ENCLII_DEFAULT_REGION=us-east
ENCLII_LOG_LEVEL=info
ENCLII_PORT=4200
ENCLII_METRICS_PORT=9090

# Kubernetes
KUBECONFIG=~/.kube/config
ENCLII_KUBE_CONTEXT=kind-enclii

# Build configuration
ENCLII_BUILDKIT_ADDR=docker://
ENCLII_BUILD_TIMEOUT=1800
BUILD_WORK_DIR=/tmp/enclii-builds
BUILD_CACHE_DIR=/var/cache/enclii-builds
BUILDPACKS_BUILDER=paketocommunity/builder-ubi-base:latest
MAX_CONCURRENT_BUILDS=3

# Provenance / PR Approval Tracking
# GitHub personal access token for PR verification (requires 'repo' scope)
# Generate at: https://github.com/settings/tokens/new
# Leave empty to disable PR approval checking
ENCLII_GITHUB_TOKEN=

# Compliance Webhooks (Vanta/Drata)
# Enable automatic compliance evidence submission
ENCLII_COMPLIANCE_WEBHOOKS_ENABLED=false

# Vanta webhook URL (for SOC 2 compliance evidence)
# Get from: Vanta Settings → Integrations → Webhooks
# Example: https://app.vanta.com/api/v1/webhooks/YOUR_WEBHOOK_ID
ENCLII_VANTA_WEBHOOK_URL=

# Drata webhook URL (for multi-framework compliance evidence)
# Get from: Drata Settings → Integrations → Webhooks
# Example: https://api.drata.com/webhooks/YOUR_WEBHOOK_ID
ENCLII_DRATA_WEBHOOK_URL=

# Secret Rotation (Vault)
# Enable automatic zero-downtime secret rotation
ENCLII_SECRET_ROTATION_ENABLED=false

# Vault server address
# Example: https://vault.example.com:8200
ENCLII_VAULT_ADDRESS=

# Vault authentication token
# Generate with: vault token create -policy=enclii-secrets
ENCLII_VAULT_TOKEN=

# Vault namespace (optional, Enterprise only)
ENCLII_VAULT_NAMESPACE=

# How often to poll Vault for secret changes (in seconds)
# Default: 60 seconds
ENCLII_VAULT_POLL_INTERVAL=60
