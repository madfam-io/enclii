# Production Environment Variables
# Production-specific overrides and additions
#
# Usage with Kustomize configMapGenerator:
#   configMapGenerator:
#     - name: production-env
#       envs:
#         - ../../../components/environment/common.env
#         - ../../../components/environment/production.env
#
# NOTE: Secrets are NOT in this file. Use secretKeyRef for:
#   - ENCLII_OIDC_CLIENT_ID
#   - ENCLII_OIDC_CLIENT_SECRET
#   - ENCLII_REGISTRY_USERNAME
#   - ENCLII_REGISTRY_PASSWORD
#   - ENCLII_GITHUB_WEBHOOK_SECRET
#   - ENCLII_CLOUDFLARE_API_TOKEN
#   - ENCLII_CLOUDFLARE_ACCOUNT_ID
#   - ENCLII_CLOUDFLARE_ZONE_ID
#   - ENCLII_CLOUDFLARE_TUNNEL_ID

# ==========================================
# ENVIRONMENT IDENTIFICATION
# ==========================================
ENCLII_ENV=production

# ==========================================
# LOGGING & DEBUGGING
# ==========================================
ENCLII_LOG_LEVEL=warn
ENCLII_ENABLE_PROFILING=false

# ==========================================
# PERFORMANCE TUNING (Production Scale)
# ==========================================
ENCLII_RATE_LIMIT_REQUESTS_PER_MINUTE=10000
ENCLII_DB_POOL_SIZE=50
ENCLII_CACHE_TTL_SECONDS=7200
ENCLII_ACCESS_TOKEN_EXPIRE_MINUTES=480

# ==========================================
# INTERNAL SERVICES
# ==========================================
ENCLII_REDIS_URL=redis://redis.data.svc.cluster.local:6379
ENCLII_ROUNDHOUSE_URL=http://roundhouse:80
ENCLII_SELF_URL=http://switchyard-api:4200

# ==========================================
# EXTERNAL URLS (Production Domains)
# ==========================================
ENCLII_OIDC_REDIRECT_URL=https://api.enclii.dev/v1/auth/callback
ENCLII_POST_LOGIN_REDIRECT_URL=https://app.enclii.dev/auth/callback
NEXT_PUBLIC_API_URL=https://api.enclii.dev

# ==========================================
# ADMIN ACCESS
# ==========================================
ENCLII_ADMIN_EMAILS=admin@madfam.io
