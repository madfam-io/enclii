# Common Environment Variables
# Shared across all environments (production, staging, dev)
#
# Usage with Kustomize configMapGenerator:
#   configMapGenerator:
#     - name: common-env
#       envs:
#         - ../../../components/environment/common.env
#
# For service-specific overrides, use patches in environment overlays

# ==========================================
# APPLICATION SETTINGS
# ==========================================
ENCLII_METRICS_ENABLED=true
ENCLII_MAX_REQUEST_SIZE=10MB

# ==========================================
# AUTHENTICATION (SSO - Janua Integration)
# ==========================================
# Mode: oidc | local | external-jwks
ENCLII_AUTH_MODE=oidc
ENCLII_OIDC_ISSUER=https://auth.madfam.io
ENCLII_EXTERNAL_JWKS_URL=https://auth.madfam.io/.well-known/jwks.json
ENCLII_EXTERNAL_ISSUER=https://auth.madfam.io
ENCLII_JANUA_API_URL=https://auth.madfam.io

# ==========================================
# CONTAINER REGISTRY
# ==========================================
ENCLII_REGISTRY=ghcr.io/madfam-org

# ==========================================
# BUILD CONFIGURATION
# ==========================================
ENCLII_BUILD_MODE=roundhouse

# ==========================================
# FRONTEND (Next.js)
# ==========================================
NODE_ENV=production
NEXT_PUBLIC_AUTH_MODE=oidc
NEXT_PUBLIC_JANUA_URL=https://auth.madfam.io
