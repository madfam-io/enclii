# Staging Environment Variables
# Staging-specific overrides and additions
#
# Usage with Kustomize configMapGenerator:
#   configMapGenerator:
#     - name: staging-env
#       envs:
#         - ../../../components/environment/common.env
#         - ../../../components/environment/staging.env

# ==========================================
# ENVIRONMENT IDENTIFICATION
# ==========================================
ENCLII_ENV=staging

# ==========================================
# LOGGING & DEBUGGING (More Verbose)
# ==========================================
ENCLII_LOG_LEVEL=info
ENCLII_ENABLE_PROFILING=true

# ==========================================
# PERFORMANCE TUNING (Lower for Staging)
# ==========================================
ENCLII_RATE_LIMIT_REQUESTS_PER_MINUTE=5000
ENCLII_DB_POOL_SIZE=20
ENCLII_CACHE_TTL_SECONDS=3600
ENCLII_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ==========================================
# INTERNAL SERVICES
# ==========================================
ENCLII_REDIS_URL=redis://redis.data.svc.cluster.local:6379
ENCLII_ROUNDHOUSE_URL=http://roundhouse:80
ENCLII_SELF_URL=http://switchyard-api:4200

# ==========================================
# EXTERNAL URLS (Staging Domains)
# ==========================================
ENCLII_OIDC_REDIRECT_URL=https://api.staging.enclii.dev/v1/auth/callback
ENCLII_POST_LOGIN_REDIRECT_URL=https://app.staging.enclii.dev/auth/callback
NEXT_PUBLIC_API_URL=https://api.staging.enclii.dev
